<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_name_product_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Robot"
            android:layout_margin="10dp"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_product_add"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/robot_product"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_price_product_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 15000"
                android:textSize="30sp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/txt_envio_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Envio Gratis"
                android:textSize="20sp"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/btn_cancel_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar del carro"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>