<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdInformationActivity"
    android:layout_margin="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_name_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textAlignment="center"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/logo_marketcolombia"
                android:layout_margin="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="$"
                   android:textSize="35sp"/>

               <TextView
                   android:id="@+id/txt_price"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Price"
                   android:textSize="35sp"
                   android:layout_marginStart="10dp"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_stock_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:textSize="25sp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" en stock"
                    android:textSize="25sp"/>

            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Especificaciones del producto"
                android:textSize="25sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/txt_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="...\n...\n...\n...\n...\n...\n...\n...\n"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir al carrito"
                android:layout_margin="20dp"/>

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                tools:context=".DetalleProductoActivity"/>

            <TextView
                android:id="@+id/txt_detalle_sin_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No tiene ubicación"
                android:visibility="gone"/>


            <Button
                android:id="@+id/btn_detalle_googlemaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Obtener Ubicacion"
                android:layout_margin="20dp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>