<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterProductActivity"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar producto"
                android:textSize="35dp"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/img_product_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/dw_camera"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take Photo"
                    android:layout_marginEnd="60dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edt_name_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name Product"
                android:layout_margin="5dp"
                android:layout_marginTop="50dp"/>
            <EditText
                android:id="@+id/edt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category"
                android:layout_margin="5dp"
                android:layout_marginTop="50dp"/>

            <EditText
                android:id="@+id/edt_enlace_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Link image"
                android:layout_margin="5dp"
                android:layout_marginTop="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_price_product"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:inputType="number"
                    android:layout_margin="10dp"/>
                <EditText
                    android:id="@+id/edt_stock_product"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Stock"
                    android:inputType="number"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Product description"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_producto_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sel. ubicaciÃ³n"/>

            <TextView
                android:id="@+id/tev_producto_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicacion: "
                android:textSize="25sp"/>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Cancel"/>
        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Save"/>
    </LinearLayout>



</LinearLayout>